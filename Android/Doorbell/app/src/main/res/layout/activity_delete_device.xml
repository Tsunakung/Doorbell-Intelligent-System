<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_background"
    tools:context="com.lewtsu.android.doorbell.activity.options.DeleteDeviceActivity">

    <Button
        android:id="@+id/btn_deletedevice_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:width="200dp"
        android:height="75dp"
        android:text="Delete"
        android:textSize="32dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/txt_deletedevice_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_deletedevice_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="Are you sure ?\nYou want delete device"
        android:textSize="24dp"
        android:textColor="#FFFFFFFF" />
</RelativeLayout>
