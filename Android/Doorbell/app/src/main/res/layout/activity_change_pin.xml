<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lewtsu.android.doorbell.activity.options.ChangePinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_changepin_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="PIN"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/edit_changepin_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="numberPassword"
            android:textSize="20dp"
            android:width="350dp" />

        <TextView
            android:id="@+id/txt_changepin_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="New PIN"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/edit_changepin_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="numberPassword"
            android:textSize="20dp"
            android:width="350dp" />

        <TextView
            android:id="@+id/txt_changepin_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Confirm New PIN"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/edit_changepin_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:inputType="numberPassword"
            android:textSize="20dp"
            android:width="350dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change PIN"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_changepin_1"
            android:layout_gravity="center_horizontal"
            android:width="300dp"
            android:height="75dp"
            android:textSize="24dp" />
    </LinearLayout>
</RelativeLayout>
