<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/connectdevice_background">

    <TextView
        android:id="@+id/txt_connectdevice_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:text="Scanning..."
        android:textColor="#FFA54800"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn_connectdevice_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_connectdevice_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="200dp"
        android:height="100dp"
        android:text="Connect"
        android:textSize="32dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_connectdevice_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_connectdevice_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="200dp"
        android:text="Manually"
        android:textColor="#FFFFFF" />

</RelativeLayout>